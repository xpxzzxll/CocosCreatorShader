CCEffect %{
  techniques:
  - passes:
    - vert: vs
      frag: fs
      blendState:
        targets:
        - blend: true
      rasterizerState:
        cullMode: none
      properties:
        texture: { value: white }
        alphaThreshold: { value: 0.5 }
        iResolution: { value: [512.0, 512.0] }
}%


CCProgram vs %{
  precision highp float;

  #include <cc-global>
  #include <cc-local>

  in vec3 a_position;
  in vec4 a_color;
  out vec4 v_color;

  #if USE_TEXTURE
  in vec2 a_uv0;
  out vec2 v_uv0;
  #endif

  void main () {
    vec4 pos = vec4(a_position, 1);

    #if CC_USE_MODEL
    pos = cc_matViewProj * cc_matWorld * pos;
    #else
    pos = cc_matViewProj * pos;
    #endif

    #if USE_TEXTURE
    v_uv0 = a_uv0;
    #endif

    v_color = a_color;

    gl_Position = pos;
  }
}%


CCProgram fs %{
  precision highp float;
  
  #include <alpha-test>
  #include <texture>

  in vec4 v_color;

  #if USE_TEXTURE
  in vec2 v_uv0;
  uniform sampler2D texture;
  uniform anonymity {
    vec2 iResolution;
  };
  #endif

  void main () {
    vec4 color = vec4(1, 1, 1, 1);

    #if USE_TEXTURE
      vec2 onePixel = vec2(1.0 / iResolution.x, 1.0 / iResolution.y);

      CCTexture(texture, v_uv0, color);

      vec4 colorRight = texture2D(texture, v_uv0 + vec2(0.0, onePixel.x));
      vec4 colorBottom = texture2D(texture, v_uv0 + vec2(onePixel.y, 0.0));

      color.r = 3.0* sqrt( (color.r - colorRight.r) * (color.r - colorRight.r) + (color.r - colorBottom.r) * (color.r - colorBottom.r) );
      color.g = 3.0* sqrt( (color.g - colorRight.g) * (color.g - colorRight.g) + (color.g - colorBottom.g) * (color.g - colorBottom.g) );
      color.b = 3.0* sqrt( (color.b - colorRight.b) * (color.b - colorRight.b) + (color.b - colorBottom.b) * (color.b - colorBottom.b) );

      color.r >1.0 ? 1.0 : color.r;
      color.g >1.0 ? 1.0 : color.g;
      color.b >1.0 ? 1.0 : color.b;
    #endif

    color *= v_color;

    ALPHA_TEST(color);

    gl_FragColor = color;
  }
}%
